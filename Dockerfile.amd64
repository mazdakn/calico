FROM debian:buster-slim as bpftool-build
ARG SOURCE_REPO=https://github.com/libbpf/bpftool.git
ARG SOURCE_REF=master
RUN apt-get update && \
apt-get upgrade -y && \
apt-get install -y --no-install-recommends \
    gpg gpg-agent libelf-dev libmnl-dev libc-dev iptables libgcc-8-dev \
    bash-completion binutils binutils-dev ca-certificates make git curl \
    xz-utils gcc pkg-config bison flex build-essential && \
apt-get purge --auto-remove && \
apt-get clean

WORKDIR /tmp

RUN git clone --recurse-submodules --depth 1 -b $SOURCE_REF $SOURCE_REPO
RUN cd bpftool/src && EXTRA_CFLAGS=--static OUTPUT=/usr/bin/bpftool make
RUN strip bpftool && \
ldd bpftool 2>&1 | grep -q -e "Not a valid dynamic program" \
	-e "not a dynamic executable" || \
	( echo "Error: bpftool is not statically linked"; false ) && \
mv bpftool /usr/bin && rm -rf /tmp/bpftool

FROM scratch
LABEL maintainer "Iago LÃ³pez Galeiras <iago@kinvolk.io>"

COPY --from=bpftool-build /usr/bin/bpftool /bpftool
